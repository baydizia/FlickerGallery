<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.baydi.flickergallery.Activites.FullImageActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/activity_full_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@color/blurBgColor">

        <ImageView
            android:id="@+id/fullImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"/>



        <TextView
            android:id="@+id/titleTextView"
            android:layout_below="@id/fullImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="?android:textAppearanceLarge"/>

        <TextView
            android:id="@+id/titleLineTextView"
            android:layout_below="@id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/detailTextView"
            android:layout_below="@id/titleLineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="?android:textAppearanceSmall"/>

        <TextView
            android:id="@+id/detailLineTextView"
            android:layout_below="@id/detailTextView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/dateTakenTextView"
            android:layout_below="@id/detailLineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/dateTakenLineTextView"
            android:layout_below="@id/dateTakenTextView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/publishedTextView"
            android:layout_below="@id/dateTakenLineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/publishedLineTextView"
            android:layout_below="@id/publishedTextView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/authorTextView"
            android:layout_below="@id/publishedLineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/authorLineTextView"
            android:layout_below="@id/authorTextView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black"/>

        <TextView
            android:id="@+id/linkTextView"
            android:layout_below="@id/authorLineTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/holo_blue_dark"
            android:textAppearance="?android:textAppearanceMedium"/>

        <TextView
            android:id="@+id/linkLineTextView"
            android:layout_below="@id/linkTextView"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/black"/>
    </RelativeLayout>

</ScrollView>